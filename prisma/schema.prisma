datasource db {
  provider = "postgresql"
  url      = "${env:DATABASE_URL}"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id               String    @id @default(cuid())
  email            String    @unique
  password         String
  name             String
  role             String
  emailVerified    Boolean   @default(false)
  verificationToken String?
  phoneNumber      String?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
}